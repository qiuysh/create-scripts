{
  "name": "create-two-scripts",
  "version": "2.0.0",
  "description": "A simple react application front-end scaffolding tool",
  "keywords": [
    "react",
    "typescript",
    "babel",
    "sass",
    "scss",
    "less",
    "webpack v5"
  ],
  "private": "false",
  "scripts": {
    "build": "lerna run build",
    "eslint": "eslint './packages/**/*' --ext .js,.ts",
    "lint": "eslint './packages/**/*' --fix --ext .js,.ts",
    "prettier": "prettier './packages/**/*' --write ",
    "publish": "lerna run publish",
    "unpublish": "lerna run unpublish",
    "release": "lerna run release -- --release-as 2.0.0"
  },
  "author": "wulin",
  "license": "MIT",
  "engines": {
    "node": ">=10.13.0"
  },
  "bugs": {
    "url": "https://github.com/qiuysh/create-two-scripts/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/qiuysh/create-two-scripts"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "packages/babel-preset-two-app/*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "packages/create-two-scripts/*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "fs-extra": "^10.0.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.17.0",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.9.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^6.6.0",
    "eslint-import-resolver-webpack": "^0.13.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.28.0",
    "husky": "^4.3.8",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "standard-version": "^9.1.0",
    "typescript": "^4.6.3"
  },
  "workspaces": [
    "packages/*"
  ]
}
