{
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "conmmand": {
    "version": {
      "allowBranch": [ 
        "release_*",
        "feat_*"
      ],
      "message": "chore(release): publish %s",
      "noPush": true
    }
  },
  "changelogPreset": {
    "name": "conventionalcommits",
    "issueUrlFormat": "{{host}}/{{owner}}/{{repository}}/issues/{{id}}",
    "types": [
      {
        "type": "feat",
        "section": "✨ Features | 新功能"
      },
      {
        "type": "fix",
        "section": "🐛 Bug Fixes | Bug 修复"
      },
      {
        "type": "perf",
        "section": "⚡ Performance Improvements | 性能优化",
        "hidden": true
      },
      {
        "type": "revert",
        "section": "⏪ Reverts | 回退",
        "hidden": true
      },
      {
        "type": "chore",
        "section": "📦 Chores | 其他更新"
      },
      {
        "type": "docs",
        "section": "📝 Documentation | 文档",
        "hidden": true
      },
      {
        "type": "style",
        "section": "💄 Styles | 风格",
        "hidden": true
      },
      {
        "type": "refactor",
        "section": "♻ Code Refactoring | 代码重构"
      },
      {
        "type": "test",
        "section": "✅ Tests | 测试",
        "hidden": true
      },
      {
        "type": "build",
        "section": "👷‍ Build System | 构建"
      },
      {
        "type": "ci",
        "section": "🔧 Continuous Integration | CI 配置"
      }
    ]
  }
}