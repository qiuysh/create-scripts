{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "lib": ["es6", "dom"],
    "outDir": "lib",
    "declaration": true,
    "removeComments": true,
    "rootDir": "./",
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"]
  },
  "include": [
    "./scripts/*.ts",
    "./utils/*.ts",
    "./webpack/*.ts",
  ],
  "exclude": ["node_modules", "lib", "bin"]
}
