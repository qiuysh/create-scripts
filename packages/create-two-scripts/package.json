{
  "name": "create-two-scripts",
  "version": "2.0.0",
  "description": "A simple react application front-end scaffolding tool",
  "keywords": [
    "react",
    "typescript",
    "babel",
    "sass",
    "scss",
    "webpack v5"
  ],
  "bin": {
    "two": "bin/index.js"
  },
  "main": "index.js",
  "scripts": {
    "build": " rm -rf lib && tsc",
    "publish": "npm publish",
    "unpublish": "npm unpublish --force create-two-scripts",
    "release": "standard-version -r 2.0.0",
    "eslint:test": "eslint './**/*' --ext .js,.ts",
    "lint:fix": "eslint './**/*' --fix --ext .js,.ts",
    "prettier": "prettier './**/*' --write "
  },
  "author": "wulin",
  "license": "MIT",
  "engines": {
    "node": ">=10.13.0"
  },
  "bugs": {
    "url": "https://github.com/qiuysh/create-two-scripts/issues"
  },
  "files": [
    "bin",
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/qiuysh/create-two-scripts",
    "directory": "packages/create-two-scripts"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "lib/**/*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "config/**/*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "util/**/*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.17.2",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.4",
    "babel-loader": "^8.2.3",
    "babel-preset-two-app": "^1.0.0",
    "case-sensitive-paths-webpack-plugin": "^2.4.0",
    "chalk": "^4.1.0",
    "commander": "^7.0.0",
    "css-loader": "^6.5.1",
    "css-minimizer-webpack-plugin": "^3.4.1",
    "detect-port": "^1.3.0",
    "esbuild-loader": "^2.18.0",
    "handlebars": "^4.7.7",
    "html-webpack-plugin": "^5.5.0",
    "inquirer": "^7.3.3",
    "less": "^4.1.2",
    "less-loader": "^10.2.0",
    "mini-css-extract-plugin": "^2.5.3",
    "ora": "^5.3.0",
    "postcss": "^8.4.8",
    "postcss-loader": "^6.2.1",
    "react-refresh": "^0.11.0",
    "sass": "^1.49.8",
    "sass-loader": "^12.6.0",
    "shelljs": "^0.8.4",
    "style-loader": "^3.3.1",
    "terser-webpack-plugin": "^5.3.1",
    "thread-loader": "^3.0.4",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "webpack": "^5.68.0",
    "webpack-dev-server": "^4.7.4",
    "webpack-merge": "^5.8.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.23",
    "os": "^0.1.2",
    "standard-version": "^9.1.0"
  }
}
