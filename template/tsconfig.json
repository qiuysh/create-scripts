{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true, 
    "allowUnreachableCode": true,
    "allowJs": true,
    "module": "esNext", 
    "target": "ES5", 
    "baseUrl": ".", 
    "sourceMap": true, 
    "outDir": "dist", 
    "jsx": "react", 
    "strict": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "experimentalDecorators": true, 
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "public/*": [
        "./public/*"
      ]
    },
    "lib": [
      "ESNext",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "scripts",
    "dist",
    "public",
    "tsconfig.json"
  ],
  "include": [
    "./src/**/*"
  ]
  
}